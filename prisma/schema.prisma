generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id                String    @id @default(uuid())
  name              String
  category          String
  description       String?   @db.Text
  features          String?   @db.Text
  imageUrl          String?
  
  // Pricing fields
  basePrice         Decimal?  @db.Decimal(10, 2)
  hourlyRate        Decimal?  @db.Decimal(10, 2)
  
  isActive          Boolean   @default(true)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  quotes            Quote[]
  bookings          Booking[]
  images            VehicleImage[]  // ADD THIS LINE
  
  @@index([category])
  @@index([isActive])
}

model VehicleImage {
  id          String    @id @default(uuid())
  vehicleId   String
  vehicle     Vehicle   @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  url         String
  alt         String
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  
  @@index([vehicleId])
  @@index([order])
}

enum VehicleCategory {
  LIMO
  PARTY_BUS
  LUXURY_BUS
  SPRINTER_VAN
  SUV
}

// Quote System
model Quote {
  id                String          @id @default(uuid())
  quoteNumber       String          @unique
  
  // NEW: Link to customer account (optional - guests can still request quotes)
  customerId        String?
  customer          Customer?       @relation(fields: [customerId], references: [id])
  
  // Promo Code
  promoCodeId       String?
  promoCode         PromoCode?      @relation(fields: [promoCodeId], references: [id])
  
  firstName         String
  lastName          String
  email             String
  phone             String
  company           String?
  
  serviceType       ServiceType
  vehicleId         String?
  vehicle           Vehicle?        @relation(fields: [vehicleId], references: [id])
  alternateVehicle  String?
  
  eventDate         DateTime
  eventType         EventType
  pickupTime        String?
  pickupLocation    String
  dropoffLocation   String?
  numberOfHours     Int?
  numberOfPassengers Int
  
  specialRequests   String?         @db.Text
  heardAboutUs      String?
  
  status            QuoteStatus     @default(PENDING)
  quotedPrice       Decimal?        @db.Decimal(10, 2)
  notes             String?         @db.Text
  
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt
  respondedAt       DateTime?
  reminderSentAt    DateTime?
  
  // NEW: Relation to booking (when quote is converted)
  booking           Booking?
  
  @@index([customerId])
  @@index([email])
  @@index([status])
  @@index([createdAt])
  @@index([promoCodeId])
}

enum ServiceType {
  HOURLY
  POINT_TO_POINT
  FULL_DAY
  MULTI_DAY
}

enum EventType {
  WEDDING
  CORPORATE
  PROM
  AIRPORT
  PARTY
  CLUB_EVENT
  BIRTHDAY
  ANNIVERSARY
  CONCERT
  SPORTING_EVENT
  OTHER
}

enum QuoteStatus {
  PENDING
  REVIEWING
  QUOTED
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

// Contact System
model ContactSubmission {
  id          String    @id @default(uuid())
  name        String
  email       String
  phone       String?
  subject     String
  message     String    @db.Text
  status      String    @default("NEW")
  createdAt   DateTime  @default(now())
  
  @@index([status])
  @@index([createdAt])
}

// Admin System
model Admin {
  id              String    @id @default(uuid())
  email           String    @unique
  passwordHash    String
  name            String
  role            AdminRole @default(ADMIN)
  isActive        Boolean   @default(true)
  lastLogin       DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum AdminRole {
  SUPER_ADMIN
  ADMIN
  MANAGER
}

// Testimonials
model Testimonial {
  id          String    @id @default(uuid())
  name        String
  service     String?
  rating      Int
  comment     String    @db.Text
  date        DateTime  @default(now())
  isApproved  Boolean   @default(false)
  isFeatured  Boolean   @default(false)
  createdAt   DateTime  @default(now())
  
  @@index([isApproved])
  @@index([isFeatured])
}

// Customer Portal System
model Customer {
  id                String    @id @default(uuid())
  email             String    @unique
  passwordHash      String
  firstName         String
  lastName          String
  phone             String
  company           String?
  
  emailVerified     Boolean   @default(false)
  verificationToken String?   @unique
  resetToken        String?   @unique
  resetTokenExpiry  DateTime?
  
  isActive          Boolean   @default(true)
  lastLogin         DateTime?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  quotes            Quote[]
  bookings          Booking[]
  invoices          Invoice[]
  
  @@index([email])
  @@index([emailVerified])
}

model Booking {
  id                String        @id @default(uuid())
  bookingNumber     String        @unique
  
  customerId        String?
  customer          Customer?      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  quoteId           String        @unique
  quote             Quote         @relation(fields: [quoteId], references: [id])
  
  status            BookingStatus @default(CONFIRMED)
  
  serviceType       ServiceType
  vehicleId         String?
  vehicle           Vehicle?      @relation(fields: [vehicleId], references: [id])
  
  // NEW: Add driver fields
  driverId          String?
  driver            Driver?       @relation(fields: [driverId], references: [id])
  driverAssignedAt  DateTime?
  
  eventDate         DateTime
  eventType         EventType
  pickupTime        String
  pickupLocation    String
  dropoffLocation   String?
  numberOfHours     Int?
  numberOfPassengers Int
  
  specialRequests   String?       @db.Text
  
  driverName        String?
  driverPhone       String?
  vehicleDetails    String?       @db.Text
  
  totalPrice        Decimal       @db.Decimal(10, 2)
  paidAmount        Decimal       @default(0) @db.Decimal(10, 2)
  
  notes             String?       @db.Text
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  confirmedAt       DateTime      @default(now())
  completedAt       DateTime?
  
  // Relations
  invoices          Invoice[]
  
  @@index([customerId])
  @@index([status])
  @@index([eventDate])
}

enum BookingStatus {
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Invoice {
  id                String        @id @default(uuid())
  invoiceNumber     String        @unique
  
  customerId        String
  customer          Customer      @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  bookingId         String
  booking           Booking       @relation(fields: [bookingId], references: [id])
  
  subtotal          Decimal       @db.Decimal(10, 2)
  promoDiscount     Decimal       @default(0) @db.Decimal(10, 2)
  tax               Decimal       @default(0) @db.Decimal(10, 2)
  total             Decimal       @db.Decimal(10, 2)
  
  promoCodeId       String?
  promoCode         PromoCode?    @relation(fields: [promoCodeId], references: [id])
  
  paymentStatus     PaymentStatus @default(PENDING)
  paymentMethod     String?
  paidAt            DateTime?
  
  notes             String?       @db.Text
  
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt
  dueDate           DateTime?
  
  @@index([customerId])
  @@index([bookingId])
  @@index([paymentStatus])
}

enum PaymentStatus {
  PENDING
  PAID
  PARTIALLY_PAID
  OVERDUE
  REFUNDED
}

model PromoCode {
  id                String    @id @default(uuid())
  code              String    @unique
  description       String?
  discountType      DiscountType
  discountValue     Decimal   @db.Decimal(10, 2)
  isActive          Boolean   @default(true)
  validFrom         DateTime?
  validUntil        DateTime?
  maxUses           Int?
  usageCount        Int       @default(0)
  minimumPurchase   Decimal?  @db.Decimal(10, 2)
  applicableServices ServiceType[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  invoices          Invoice[]
  quotes            Quote[]
  
  @@index([code])
  @@index([isActive])
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

// Driver Management System
model Driver {
  id                String    @id @default(uuid())
  
  // Personal Info
  firstName         String
  lastName          String
  email             String    @unique
  phone             String
  
  // License Info
  licenseNumber     String?
  licenseExpiry     DateTime?
  licenseClass      String?
  
  // Employment
  employeeNumber    String?   @unique
  hireDate          DateTime?
  
  // Status
  isActive          Boolean   @default(true)
  notes             String?   @db.Text
  
  // Photo (optional)
  photoUrl          String?
  
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  
  // Relations
  bookings          Booking[]
  unavailableDates  DriverUnavailability[]
  
  @@index([isActive])
  @@index([email])
}

// Driver Unavailability (days off, vacation, etc.)
model DriverUnavailability {
  id                String    @id @default(uuid())
  
  driverId          String
  driver            Driver    @relation(fields: [driverId], references: [id], onDelete: Cascade)
  
  startDate         DateTime
  endDate           DateTime
  reason            String?
  
  createdAt         DateTime  @default(now())
  
  @@index([driverId])
  @@index([startDate, endDate])
}